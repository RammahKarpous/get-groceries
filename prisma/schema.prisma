generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id Int @id @default(autoincrement())
    user_id String @unique
    shoppingList ShoppingListOnUser[]
}

model ShoppingList {
    id Int @id @default(autoincrement())
    name String
    slug String
	products products[]
    shoppingListOnUser ShoppingListOnUser[]
}

model ShoppingListOnUser {
    user_id  Int @map("userId")
    user User @relation(fields: [user_id], references: [id])
    
    shoppingList_id Int  @map("shoppingListId")
    shoppingList ShoppingList @relation(fields: [shoppingList_id], references: [id])

    @@id([user_id, shoppingList_id])
}

model products {
	id Int @id @unique
	name String?
    category String?
	shipping_list_id Int
	shoppingList ShoppingList @relation(fields: [shipping_list_id], references: [id]) 
}
